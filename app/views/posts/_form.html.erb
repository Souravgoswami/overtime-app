<%= form_for @post, html: { autocomplete: 'off' } do |f| %>
	<div class="form-group">
		<%= f.label :date %>
		<%= f.date_field :date, class: 'form-control' %>
		<br>
	</div>

	<div class="form-group">
		<%= f.label :daily_hours %>
		<%= f.number_field :daily_hours, class: 'form-control', step: 0.1 %>
		<br>
	</div>

	<div class="form-group">
		<%= f.label :work_performed %>
		<%= f.text_area :work_performed, class: 'form-control' %>
		<br>
	</div>

	<%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

	<div class="form-group">
		<center>
			<label class="btn-outline-pink-animated" data-content="Save">
				<%= f.submit '', style: 'display: none', id: "submit" %>
			</label>
		</center>
	</div>
<% end %>
