<h1>Posts</h1>
<%= @posts.inspect %>

<div class="container-fluid">
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th><center>#</center></th>
						<th><center>User</center></th>
						<th><center>Date</center></th>
						<th><center>Rationale</center></th>
					</tr>
				</thead>

				<tbody>
					<% @posts.each_with_index do |x, i| %>
						<tr class=<%= @table_class[i % @table_class.size ] if i % 2 == 0 %>>
							<td><%= x.id %></td>
							<td><%= "#{x.user.first_name} #{x.user.last_name}" %></td>
							<td><%= x.date %></td>
							<td><%= x.rationale.then { |x| x.length > 50 ? x[0..50] + '...' : x } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
</div>
