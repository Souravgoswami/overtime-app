<%- if controller_name != 'sessions' %>
	<%= link_to "", new_session_path(resource_name), class: 'btn-outline-success-animated', 'data-content': 'Log in' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<%= link_to "", new_password_path(resource_name), class: 'btn-outline-warning-animated', 'data-content': 'Forgot Password?' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<%= link_to "", new_registration_path(resource_name), class: 'btn-outline-primary-animated', 'data-content': 'Sign up' %><br />
<% end %>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<%= link_to "", new_confirmation_path(resource_name), class: 'btn-outline-orange-animated', 'data-content': "Didn't receive confirmation instructions?" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<%= link_to "", new_unlock_path(resource_name), class: 'btn-outline-blue-animated', 'data-content': "Didn't receive unlock instructions?" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
		<%= link_to "", omniauth_authorize_path(resource_name, provider), class: 'btn-outline-pink-animated', 'data-content': "Sign in with #{OmniAuth::Utils.camelize(provider)}" %><br />
	<% end %>
<% end %>
